{% extends 'EzPlatformAdminUiBundle::layout.html.twig' %}

{% trans_default_domain "linkmanager" %}

{%- block breadcrumbs -%}
    {% include '@EzPlatformAdminUi/parts/breadcrumbs.html.twig' with { items: [
        { value: 'url.list'|trans, url: path('admin_link_manager_list') },
        { value: 'url.view'|trans({ '%url%': url.url|length > 60 ? url.url|slice(0, 60) ~ '...' : url.url }) }
    ]} %}
{%- endblock -%}

{%- block pageTitle -%}
    {% include '@EzPlatformAdminUi/parts/page_title.html.twig' with {
        title: 'url.view'|trans({ '%url%': url.url|length > 60 ? url.url|slice(0, 60) ~ '...' : url.url }),
        iconName: 'link'
    } %}
{%- endblock -%}

{%- block content -%}
    <section class="container mt-5">
        <div class="btn-toolbar justify-content-end" role="toolbar">

        </div>

        <div class="ez-table-header mt-4">
            <h5>{{ 'url.tab.information'|trans|desc('Details') }}</h5>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>{{ 'url.label.address'|trans }}</th>
                    <td>
                        <a href="{{ url.url }}" target="_blank">{{ url.url }}</a>
                        <a href="{{ path('admin_link_manager_edit', { urlId: url.id }) }}" class="btn btn-icon float-right">
                            <svg class="ez-icon ez-icon-edit">
                                <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#edit"></use>
                            </svg>
                        </a>
                    </td>
                </tr>
                <tr>
                    <th>{{ 'url.label.status'|trans }}</th>
                    <td>{{ url.isValid ? 'url.status.valid'|trans : 'url.status.invalid'|trans }}</td>
                </tr>
                <tr>
                    <th>{{ 'url.label.last_checked'|trans }}</th>
                    <td>
                        {% if url.lastChecked %}
                            {{ url.lastChecked | date('M d, Y h:i:sA') }}
                        {% else %}
                            {{ 'url.label.last_checked.never'|trans|desc('This URL has not been checked') }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>{{ 'url.label.created'|trans }}</th>
                    <td>{{ url.created | date('M d, Y h:i:sA') }}</td>
                </tr>
                <tr>
                    <th>{{ 'url.label.modified'|trans }}</th>
                    <td>{{ url.modified | date('M d, Y h:i:sA') }}</td>
                </tr>
            </tbody>
        </table>
    </section>

    <section class="container mt-5">
        <div class="ez-table-header">
            <h5>{{ 'url.tab.usages'|trans({'%count%': usages.nbResults })|desc('Content item(s) using this URL') }}</h5>
        </div>

        <table class="table">
            <colgroup>
                <col />
                <col width="20%"/>
                <col width="10%"/>
                <col width="10%"/>
            </colgroup>

            <thead>
                <tr>
                    <th>{{ 'url.usages.column.name'|trans|desc('Name') }}</th>
                    <th>{{ 'url.usages.column.status'|trans|desc('Status') }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for usage in usages %}
                    {% set content = usage.valueObject %}
                    {% set view_url = path('_ez_content_view', { contentId: content.id }) %}
                    {# TODO: Missing edit URL #}
                    {% set edit_url = '' %}

                    <tr>
                        <td>
                            <a href="{{ view_url }}">
                                {{ ez_content_name(content) }}
                            </a>
                        </td>
                        <td>{{ content.published ? 'Published' : 'Draft' }}</td>
                        <td>
                            <a href="{{ edit_url }}" class="btn btn-icon">
                                <svg class="ez-icon ez-icon-edit">
                                    <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#edit"></use>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="row justify-content-center align-items-center">
            {{ pagination|raw }}
        </div>
    </section>
{%- endblock -%}

{% block title %}{{ 'url.view'|trans({ '%url%': url.url|length > 60 ? url.url|slice(0, 60) ~ '...' : url.url }) }}{% endblock %}

